trap "Unmount 2>/dev/null" EXIT

Mount () {
	Unmount
	mkdir -p target
	../disorderfs "${@}" "$(pwd)/fixtures/" target/
}

Unmount () {
	fusermount -u target/ 2>/dev/null && rm -rf target/
}

Fail () {
	echo "E: ${*}"
	exit 1
}

Expect () {
	ENTRIES="$(find target -type f -printf %f)"
	EXPECTED="${1}"

	if [ "${ENTRIES}" != "${EXPECTED}" ]
	then
		Fail "saw ${ENTRIES}, expected ${EXPECTED}"
	fi
}
